{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
  ], 
  "exclude": ["node_modules","dist","**/*.test.ts"]
}
